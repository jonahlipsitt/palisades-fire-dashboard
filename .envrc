# Automatically activate gee-dashboard environment when entering this directory
# This file works with direnv (install with: brew install direnv)

# If direnv is available, use it
if command -v direnv >/dev/null 2>&1; then
    # Auto-activate conda environment
    use conda gee-dashboard
    
    # Set project-specific environment variables
    export PYTHONPATH="$PWD/code/src:$PYTHONPATH"
    export GEE_PROJECT_ID="ee-jonahlipsitt"
    
    echo "🔥 Palisades Fire Dashboard environment activated!"
    echo "📦 Environment: gee-dashboard"
    echo "🛰️ GEE Project: $GEE_PROJECT_ID"
fi